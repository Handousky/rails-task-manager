<div class = container>
  <h1>All Tasks right here!</h1>
  <% @tasks.each do |task| %>
    <h2 class="task"><%= task.name %></h2>
    <% if task.finished %>
      <input type="checkbox" name="task_done" checked disabled>done<br>
    <% else %>
      <input type="checkbox" name="task_done" disabled>done<br>
    <% end %>

    <%= link_to "see details", task_path(task) %>
    <%= link_to "edit a task", edit_task_path(task) %>
    <%= link_to "Delete", task_path(task),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
  <% end %>

  <p><%= link_to "new_task", new_task_path %></p>
</div>

